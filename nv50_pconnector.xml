			<bitfield name="UNPLUG_I2C3" high="19" low="19" />
		</reg32>
		<reg32 name="HOTPLUG_CTRL" offset="0x54">
			<doc>
			Write 0x7FFF7FFF to acknowledge hotplug interrupts.
			</doc>
			<bitfield name="PLUG_I2C0" high="0" low="0" />
			<bitfield name="PLUG_I2C1" high="1" low="1" />
			<bitfield name="PLUG_I2C2" high="2" low="2" />
